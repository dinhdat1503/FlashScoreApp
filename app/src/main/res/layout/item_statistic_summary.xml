<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingVertical="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_stat_home_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            tools:text="63%" />

        <TextView
            android:id="@+id/text_stat_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@android:color/darker_gray"
            tools:text="Kiểm soát bóng" />

        <TextView
            android:id="@+id/text_stat_away_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textStyle="bold"
            tools:text="37%" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/bar_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="63"
            android:background="@drawable/statistic_bar_shape"
            android:backgroundTint="@color/selected_date_color" />
        <View
            android:id="@+id/bar_away"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="37"
            android:background="@drawable/statistic_bar_shape"
            android:backgroundTint="@color/progress_bar_progress" /> </LinearLayout>

</LinearLayout>